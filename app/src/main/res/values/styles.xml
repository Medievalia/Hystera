<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estilo para EditText com largura e peso específicos -->
    <style name="Edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Estilo para a aparência do texto no calendário -->
    <style name="CalenderViewDateCustomText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/calendar_date_selector</item>
    </style>

    <!-- Estilo para a data selecionada -->
    <style name="SelectedDateStyle">
        <item name="android:textColor">#FF0000</item> <!-- Altere para a cor desejada -->
    </style>

    <!-- Estilo para o período -->
    <style name="PeriodColorStyle">
        <item name="android:textColor">#FF0000</item> <!-- Altere a cor conforme desejado -->
    </style>

</resources>
