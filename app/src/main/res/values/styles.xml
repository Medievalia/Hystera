<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estilo para EditText com largura e peso específicos -->
    <style name="Edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Estilo para a aparência do texto no calendário -->
    <style name="CalenderViewDateCustomText">
        <item name="android:textColor">#8C52FF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para a data selecionada -->
    <style name="SelectedDateStyle">
        <item name="android:textColor">#FF0000</item> <!-- Altere para a cor desejada -->
    </style>

    <!-- Estilo para o período -->
    <style name="PeriodColorStyle">
        <item name="android:textColor">#FF0000</item> <!-- Altere a cor conforme desejado -->
    </style>

    <!-- Estilo personalizado para ImageViews circulares -->
    <style name="CircularImageView">
        <item name="shapeAppearanceOverlay">"@style/ShapeAppearanceOverlay.MaterialComponents.Shape.Circular"</item>
    </style>

    <!-- Estilo personalizado para MaterialSwitch -->
    <style name="CustomSwitchStyle">
        <!-- Cor do pole (thumb) quando ativado -->
        <item name="thumbTint">#8A50FF</item>

        <!-- Cor do trilho (track) quando ativado -->
        <item name="trackTint">#A7A4AF</item>

        <!-- Cor do texto -->
        <item name="android:textColor">#8A50FF</item>

        <!-- Tamanho do texto -->
        <item name="android:textSize">18sp</item>

        <!-- Usar cores temáticas do Material -->
        <item name="useMaterialThemeColors">true</item>
    </style>

</resources>
