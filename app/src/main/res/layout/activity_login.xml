<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo" />
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:columnCount="1"
        android:rowCount="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Email"
            android:textColor="#8C52FF"
            android:fontFamily="@font/kurale"
            android:textSize="18sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="15sp"
            android:textColor="@color/purple_500"
            android:background="@drawable/edit_text"
            android:textSize="18sp" />
    </GridLayout>
    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:columnCount="1"
        android:rowCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Senha"
            android:textColor="#8C52FF"
            android:fontFamily="@font/kurale"
            android:textSize="18sp" />

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="15sp"
            android:textColor="@color/purple_500"
            android:background="@drawable/edit_text"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/esqueceu"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/kurale"
            android:text="Esqueceu a senha? Clique aqui"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#8A50FF"
            android:textSize="14sp"
            />
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:columnCount="2"
        android:rowCount="1">

        <!-- Botão 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gmail"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/fundo_botton_escuro"
            android:fontFamily="@font/kurale"
            android:text="Gmail"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <!-- Botão 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_seguinte"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/fundo_botton_escuro"
            android:fontFamily="@font/kurale"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </GridLayout>

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/elipse">
    </ImageView>
</LinearLayout>
