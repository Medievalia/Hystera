<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:src="@drawable/logo" />

    <!-- Back Button -->
    <RelativeLayout
        android:id="@+id/back_button"
        android:layout_width="78dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="64dp"
            android:layout_height="54dp"
            android:layout_centerInParent="true"
            android:src="@drawable/back" />

    </RelativeLayout>

    <!-- Botão Gmail -->

    <!-- Botão E-mail -->

    <TextView
        android:id="@+id/como_voc__deseja_se_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Como você deseja se cadastrar"
        android:textColor="#8A50FF"
        android:textSize="35sp" />

    <RelativeLayout
        android:id="@+id/bot_o_gmail"
        android:layout_width="372dp"
        android:layout_height="60dp"
        android:layout_below="@+id/como_voc__deseja_se_cadastrar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:background="#8A50FF">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="65dp"
            android:layout_height="46dp"
            android:background="#8A50FF"
            android:src="@drawable/gmail" />

        <TextView
            android:id="@+id/login"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@id/image_1"
            android:text="Inscreva-se com o Google"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bot_o_e_mail"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@id/bot_o_gmail"
        android:layout_marginTop="33dp">

        <TextView
            android:id="@+id/login_ek1"
            android:layout_width="316dp"
            android:layout_height="42dp"
            android:layout_marginStart="23px"
            android:gravity="center_vertical"
            android:text="Inscreva-se com o e-mail"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </RelativeLayout>

    <!-- Como você deseja se cadastrar -->

</RelativeLayout>
